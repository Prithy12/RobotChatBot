{
  "name": "claude-desktop-dev",
  "productName": "Claude Desktop Dev",
  "version": "1.0.0",
  "description": "Cross-platform desktop chatbot application using Claude API (Development)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --dev",
    "build": "webpack --config webpack.config.js",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.claudedesktop.app.dev",
    "productName": "Claude Desktop Dev",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "dist/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/keytar"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns"
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "npmRebuild": true,
    "publish": null
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "babel-loader": "^9.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "marked": "^9.1.5",
    "moment": "^2.29.4"
  }
}